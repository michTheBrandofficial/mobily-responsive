{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "mobily-responsive",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": false,
        "setDecorations": true
      },
      "fs": {
        "all": false,
        "createDir": true,
        "exists": true,
        "writeFile": true,
        "readFile": true,
        "scope": ["$APPLOCALDATA/**/**"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.mobily-responsive.dev",
      "longDescription": "",
      "resources": [],
      "shortDescription": "",
      "targets": ["deb", "appimage"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
      "deb": {
        "files": {}
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "Simulator",
        "width": 500,
        "maxWidth": 500,
        "transparent": true,
        "decorations": false,
        "center": true,
        "alwaysOnTop": true
      }
    ]
  }
}
